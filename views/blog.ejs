<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
    <title>Blog Page</title>
</head>

<body>


  <%- include('partials/nav') %>
    <div class="container mt-4 flex-wrap:wrap">
      <h1 class="">
        <%= blog.title %>
      </h1>
      <img src=" <%= blog.coverImgUrl %>" width="700px" alt="">
      <pre class="mt-4"> <%= blog.body %></pre>
    </div>

    <!--  -->
    <div class="container">
      <img src="<%= blog.createdBy.profileImg %>" alt="" width="80px" />
      <%= blog.createdBy.name %>
    </div>


    <!--  -->
    <div class="container mt-4">
      <!--comint form -->
      <h2 class="form-label">Comment (<%= comments.length %>)
      </h2>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mt-3">
            <input type="text" name="content" id="content" class="form-control" placeholder="enter your comment" />
          </div>
          <button type="submit" class=" mt-2 btn btn-primary py-1"> Enter</button>
        </form>
        <% } %>

          <!--  -->
          <div class="m-3">
            <%comments.forEach((comment,index)=> { %>
              <div>
                <img src="<%= comment.createdBy.profileImg %>" alt="" width="50px" />
                <%= index + 1 %>
                  <%= comment.createdBy.name %>
                    <pre> <%= comment.content %></pre>

              </div>

              <% }); %>
          </div>
    </div>


    <%- include('partials/scripts') %>
</body>

</html>